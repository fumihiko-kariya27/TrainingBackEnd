<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.service.user.impl.UserRepository">
  <resultMap id="TrainingUser" type="com.example.domain.training.account.TrainingUser">
    <!-- ユーザー詳細 -->
    <constructor>
      <idArg column="id" javaType="int"/>
      <arg column="name" javaType="String"/>
      <arg column="join_date" javaType="java.time.LocalDate"/>
      <arg column="gender" javaType="String"/>
      <arg column="status" javaType="String"/>
      <arg column="join_flag" javaType="String"/>
    </constructor>
  </resultMap>

  <sql id="selectAllUsers">
    SELECT
      id,
      name,
      join_date,
      gender,
      status,
      join_flag
    FROM m_user
  </sql>

  <select id="selectUsers" resultMap="TrainingUser">
    <include refid="selectAllUsers"></include>
  </select>

  <select id="selectUsersJoinFlagEqual" resultMap="TrainingUser">
    <include refid="selectAllUsers"></include>
    WHERE join_flag = #{joinFlag.code}
  </select>
</mapper>